function easyZonePicker()
  ezn = {"EasyMission1","EasyMission2","EasyMission3","EasyMission4","EasyMission5","EasyMission6"}
  max = (#ezn)
  picked = math.random(1, max)
  env.info(ezn[picked])
  easyMissions(ezn[picked])
end

